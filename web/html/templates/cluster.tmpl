<div id="cluster_div_{{ .Item.ID }}" class="container-fluid">
  <div class="row" id="cluster_list_{{ .Item.ID }}">
    {{ $item := .Item }}
    {{ range .Clusters }}
    <span id="cluster_link_{{ $item.ID }}_{{ .ID }}">
      {{ .Name }}
      ({{ .ID }})
      <img
      id="item_{{ $item.ID }}_cluster_{{ .ID }}"
      src="/static/delete.png"
      role="button"
      onclick="item_rm_cluster({{ $item.ID }}, {{ .ID }});"
      </span>
      <br />
    {{ end }}
  </div>

  <div class="row" {{/* id="cluster_form_{{ .Item.ID }}" */}} >
    <input type="text"
           id="cluster_input_{{ .Item.ID }}"
           list="cluster_list"
           placeholder="Cluster"
           />
    <script>
     install_cluster_key_handler({{ .Item.ID }});
    </script>
  </div>
</div>
{{ end }}
