<!DOCTYPE html>
<html>
  {{ template "head" . }}

  <body>
    {{ template "intro" . }}

    <h3>{{ len .Notes }} Notes</h3>

    <table class="notes">
      <thead>
        <tr>
          <th>Title</th>
          <th>Created</th>
          <th>Modified</th>
          <th>Revision</th>
          <th>Labels</th>
        </tr>
      </thead>
      
      <tbody>
        {{ $row_class := cycle "even" "odd"  }}
        {{ range .Notes }}
        <tr class="{{ $row_class.Next }}">
          <td><a href="/note/{{ .ID }}">{{ .Title }}</a></td>
          <td>{{ fmt_time .Created  }}</td>
          <td>{{ fmt_time .Modified }}</td>
          <td>{{ .Revision }}</td>
          <td>&nbsp;</td>
        </tr>
        {{ end }}
      </tbody>
    </table>

    <h3>{{ len .Files }} Files</h3>

    <ul>
      {{ range .Files }}
      <li><a href="/file/{{ .ID }}" target="_blank">{{ .Name }}</a></li>
      {{ end }}
    </ul>
    
    {{ template "footer" }}
  </body>
</html>
{{ end }}
