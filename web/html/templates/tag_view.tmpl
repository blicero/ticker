<li>
  <a href="/tag/{{ .ID }}">{{ .Name }}</a>
  {{ if (gt (len .Children) 0) }}
  <ul>
    {{ range .Children }}
    {{ template "tag_view" . }}
    {{ end }}
  </ul>
  {{ end }}
</li>
{{ end }}
