{{ $id := concat "tag_menu_item_" (i64str .Item.ID) }}
<select id="{{ $id }}">
  {{ $item := .Item }}
  {{ range .Tags }}
  <option id="{{ $id }}_opt_{{ .ID }}" {{ if ($item.HasTag .ID) }}style="display:none;" {{ end }}value="{{ .ID }}">{{ .Name }}</option>
  {{ end }}
</select>
<input type="button" value="Add" onclick="attach_tag('{{ $id }}', {{ .Item.ID }});" />
{{ end }}
