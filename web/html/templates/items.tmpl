{{ define "items" }}
{{/* Created on 13. 02. 2021 */}}
{{/* Time-stamp: <2021-02-16 12:42:08 krylon> */}}
<table class="items">
  <thead>
    <tr>
      <th>Time</th>
      <th>Feed</th>
      <th>Title</th>
      <th>Summary</th>
    </tr>
  </thead>

  <tbody>
    {{ $class := cycle "even" "odd" }}
    {{ $feeds := .FeedMap }}
    {{ range .Items }}
    <tr class="{{ $class.Next }}">
      <td>{{ fmt_time .Timestamp }}</td>
      <td><a href="/feed/{{ .FeedID }}">
        {{/* Feed #{{ .FeedID }} */}}
        {{ (index $feeds .FeedID).Name }}
      </a></td>
      <td>
        <a href="{{ .URL }}" target="_blank">
          {{ .Title }}
        </a>
      </td>
      <td>{{ .Description }}</td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
